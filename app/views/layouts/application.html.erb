<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'pages', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'work_places', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'comments', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'pages', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'work_places', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'comments', 'data-turbolinks-track': 'reload' %>
    
        <script src="https://kit.fontawesome.com/41ca430270.js"></script>
  </head>

  <body>
    <div class="container">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    <%= yield %>
    </div>
  </body>
</html>
